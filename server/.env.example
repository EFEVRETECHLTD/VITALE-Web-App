# Server Configuration
PORT=3001
NODE_ENV=development # Set to 'production' in production environment

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com

# MongoDB Configuration
USE_MONGODB=true
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# Redis Configuration
USE_REDIS=true
REDIS_URL=redis://username:password@redis-host:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=30d

# Logging
LOG_LEVEL=info # debug, info, warn, error

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100 # 100 requests per window

# Database Configuration
# Choose adapter: inmemory, postgresql
DB_ADAPTER=inmemory

# PostgreSQL Configuration (when DB_ADAPTER=postgresql)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=vitale
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SSL=false

# Authentication Configuration
# Choose adapter: jwt, keycloak
AUTH_ADAPTER=jwt

# Keycloak Configuration (when AUTH_ADAPTER=keycloak)
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=vitale
KEYCLOAK_CLIENT_ID=vitale-client
KEYCLOAK_CLIENT_SECRET=your_client_secret_here
KEYCLOAK_PUBLIC_KEY=your_public_key_here
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
